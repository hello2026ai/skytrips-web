{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@skytrips-web/libs": ["libs/src/index.js"],
      "@skytrips-web/libs/shared-assets": ["libs/src/shared-assets/images"],
      "@skytrips-web/libs/shared-styles": ["libs/src/shared-styles"],
      "@skytrips-web/libs/shared-ui": ["libs/src/shared-ui"],
      "@skytrips-web/libs/shared-utils": ["libs/src/shared-utils"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
